{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**", ".next/**", "!.next/cache/**", "build/**"],
            "env": ["NODE_ENV"]
        },
        "api#build": {
            "dependsOn": ["^build"],
            "outputs": [],
            "env": ["NODE_ENV"]
        },
        "web#build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"],
            "env": ["NODE_ENV"]
        },
        "shared#build": {
            "outputs": [],
            "env": ["NODE_ENV"]
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build"]
        },
        "lint": {
            "dependsOn": ["^build"]
        },
        "test": {
            "dependsOn": ["^build"]
        },
        "type-check": {
            "dependsOn": ["^build"]
        },
        "clean": {
            "cache": false
        }
    }
}
