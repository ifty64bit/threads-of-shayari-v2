{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "composite": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": ["ESNext"],
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "paths": {
            "@api": ["../api/src"],
            "@shared": ["../shared/src"],
            "@/*": ["./src/*"],
            "shared": ["../shared/dist"],
            "shared/*": ["../shared/dist/*"]
        }
    },
    "include": ["src/**/*", "../shared/src/**/*"],
    "references": [
        {
            "path": "../shared"
        }
    ]
}
