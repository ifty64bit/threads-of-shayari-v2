{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "strict": true,
        "skipLibCheck": true,
        "lib": ["ESNext"],
        "jsx": "react-jsx",
        "jsxImportSource": "hono/jsx",
        "paths": {
            "@api": ["../api/src"],
            "@shared": ["../shared/src"],
            "@/*": ["./src/*"]
        }
    }
}
